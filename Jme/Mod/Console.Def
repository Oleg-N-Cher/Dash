MODULE Console;
IMPORT SYSTEM, GrApp, Rsrc;

CONST
  Black    * = 0;
  Blue     * = 1;
  Red      * = 2;
  Magenta  * = Red + Blue;
  Green    * = 4;
  Cyan     * = Green + Blue;
  Olive    * = Red + Green;
  White    * = Red + Green + Blue;
  Bright     = 40H;
  LBlue    * = Bright + Blue;
  LRed     * = Bright + Red;
  LMagenta * = Bright + Magenta;
  LGreen   * = Bright + Green;
  LCyan    * = Bright + Cyan;
  Yellow   * = Bright + Olive;
  LWhite   * = Bright + White;

PROCEDURE At* (x (* {0..31} *), y: (* {0..15} *) SHORTINT); END At;
PROCEDURE Ink* (color: (* {0..7; 40H..47H} *) SHORTINT);    END Ink;
PROCEDURE WriteCh* (ch: CHAR);                              END WriteCh;
PROCEDURE WriteLn* ;                                        END WriteLn;
PROCEDURE WriteStr* (IN str: ARRAY OF CHAR);               END WriteStr;

END Console.
